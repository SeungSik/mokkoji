<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFF"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="34dp" >

        <Button
            android:id="@+id/mygroup"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/postit2"
            android:text="My Group" />

        <Button
            android:id="@+id/mine"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:background="@drawable/posit3"
            android:text="mine" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="#6799FF"
        android:orientation="vertical" >

    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:background="#ffffffff" >

	    <Button
	        android:id="@+id/monthPrevious"
	        android:layout_width="30dp"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:background="@drawable/left"
	        android:gravity="center_horizontal" />

		<TextView
			android:id="@+id/monthText"
		    android:layout_width="200dp"
		    android:layout_height="wrap_content"
		    android:text="MonthView"
		    android:gravity="center_horizontal"
		    android:layout_centerInParent="true"
		    />

		<Button
		    android:id="@+id/monthNext"
		    android:layout_width="30dp"
		    android:layout_height="wrap_content"
		    android:layout_alignParentRight="true"
		    android:background="@drawable/leftblue"
		    android:gravity="center_horizontal" />

	</RelativeLayout>

	<LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginLeft="4dp"
	    android:layout_marginRight="4dp"
	    android:layout_marginTop="4dp"
	    android:background="#FFFFC5"
	    android:orientation="horizontal" >

    	<TextView
    	    android:id="@+id/sundayTitle"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:layout_marginRight="1dp"
    	    android:layout_weight="1"
    	    android:background="#6799FF"
    	    android:gravity="center"
    	    android:text="일"
    	    android:textColor="#FFFFFF"
    	    android:textSize="16dp"
    	    android:textStyle="bold" />

		<TextView
		    android:id="@+id/mondayTitle"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_marginRight="1dp"
		    android:layout_weight="1"
		    android:background="#6799FF"
		    android:gravity="center"
		    android:text="월"
		    android:textColor="#FFFFFF"
		    android:textSize="16dp"
		    android:textStyle="bold" />

		<TextView
		    android:id="@+id/tuesdayTitle"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_marginRight="1dp"
		    android:layout_weight="1"
		    android:background="#6799FF"
		    android:gravity="center"
		    android:text="화"
		    android:textColor="#FFFFFF"
		    android:textSize="16dp"
		    android:textStyle="bold" />

		<TextView
		    android:id="@+id/wednesdayTitle"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_marginRight="1dp"
		    android:layout_weight="1"
		    android:background="#6799FF"
		    android:gravity="center"
		    android:text="수"
		    android:textColor="#FFFFFF"
		    android:textSize="16dp"
		    android:textStyle="bold" />

		<TextView
		    android:id="@+id/thursdayTitle"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_marginRight="1dp"
		    android:layout_weight="1"
		    android:background="#6799FF"
		    android:gravity="center"
		    android:text="목"
		    android:textColor="#FFFFFF"
		    android:textSize="16dp"
		    android:textStyle="bold" />

		<TextView
		    android:id="@+id/fridayTitle"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_marginRight="1dp"
		    android:layout_weight="1"
		    android:background="#6799FF"
		    android:gravity="center"
		    android:text="금"
		    android:textColor="#FFFFFF"
		    android:textSize="16dp"
		    android:textStyle="bold" />

		<TextView
		    android:id="@+id/saturdayTitle"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_weight="1"
		    android:background="#6799FF"
		    android:gravity="center"
		    android:text="토"
		    android:textColor="#FFFFFF"
		    android:textSize="16dp"
		    android:textStyle="bold" />

    </LinearLayout>

	<GridView
	    android:id="@+id/monthView"
	    android:layout_width="fill_parent"
	    android:layout_height="300dp"
	    android:background="#EAEAEA"
	    android:horizontalSpacing="1dp"
	    android:numColumns="7"
	    android:stretchMode="columnWidth"
	    android:verticalSpacing="1dp" />

	<TextView
	    android:id="@+id/textView1"
	    android:layout_width="match_parent"
	    android:layout_height="30dp"
	    android:background="#6799FF"
	    android:text="일정 보기"
	    android:textAppearance="?android:attr/textAppearanceMedium" />

	<RelativeLayout
	    android:id="@+id/scheduleLayout"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:background="#EAEAEA"
	    android:padding="4dp" >

	    <ListView
	        android:id="@+id/scheduleList"
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:layout_alignParentTop="true"
	        android:background="#FFFFFF"
	        android:cacheColorHint="#00000000"
	        android:divider="#00000000" />

	</RelativeLayout>
</LinearLayout>