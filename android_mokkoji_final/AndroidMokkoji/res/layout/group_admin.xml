<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:paddingLeft="0dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#5CD1E5"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="11dp"
            android:paddingTop="11dp"
            android:text="모꼬지 관리"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.11"
        android:background="#FFFFFF"
        android:paddingBottom="11dp" >

        <Button
            android:id="@+id/Modifygroup"
            android:layout_width="206dp"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/Creategroup"
            android:layout_below="@+id/Creategroup"
            android:layout_marginTop="21dp"
            android:background="@drawable/admingroup"
            android:text="모꼬지 관리" />

        <Button
            android:id="@+id/Creategroup"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:background="@drawable/create_group"
            android:text="모꼬지 생성" />
    </RelativeLayout>

</LinearLayout>