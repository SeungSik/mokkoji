<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/weekName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#5CD1E5"
            android:gravity="center"
            android:text="주간 일정"
            android:textColor="#FFFFFF"
            android:textSize="32dp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/pre_week"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="저번주" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.96" >
        </LinearLayout>

        <Button
            android:id="@+id/next_week"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="다음주" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.12"
        android:orientation="horizontal"
        android:layout_margin="2dp" >

        <TextView
            android:id="@+id/weeksunday"
            android:layout_width="55dp"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:background="#D4F4FA"
            android:gravity="center"
            android:text="  일  "
            android:textColor="#FF0000"
            android:textSize="25dp"
            android:textStyle="bold" />

        <ListView
            android:id="@+id/sunView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/weekbac" >

        </ListView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.12"
        android:layout_margin="2dp" >

        <TextView
            android:id="@+id/weekmonday"
            android:layout_width="55dp"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:background="#D4F4FA"
            android:gravity="center"
            android:text="  월  "
            android:textColor="#000000"
            android:textSize="25dp"
            android:textStyle="bold" />

        <ListView
            android:id="@+id/monView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/weekbac" >
           
        </ListView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.12" 
        android:layout_margin="2dp">

        <TextView
            android:id="@+id/weektuesday"
            android:layout_width="55dp"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:background="#D4F4FA"
            android:gravity="center"
            android:text="  화  "
            android:textColor="#000000"
            android:textSize="25dp"
            android:textStyle="bold" />

        <ListView
            android:id="@+id/tueView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/weekbac" >
           
        </ListView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.12" 
        android:layout_margin="2dp">

        <TextView
            android:id="@+id/weekwednesday"
            android:layout_width="55dp"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:background="#D4F4FA"
            android:gravity="center"
            android:text="  수  "
            android:textColor="#000000"
            android:textSize="25dp"
            android:textStyle="bold" />

        <ListView
            android:id="@+id/wedView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/weekbac" >

        </ListView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.12"
        android:layout_margin="2dp" >

        <TextView
            android:id="@+id/weekthursday"
            android:layout_width="55dp"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:background="#D4F4FA"
            android:gravity="center"
            android:text="  목  "
            android:textColor="#000000"
            android:textSize="25dp"
            android:textStyle="bold" />

        <ListView
            android:id="@+id/thuView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/weekbac" >

        </ListView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.12" 
        android:layout_margin="2dp">

        <TextView
            android:id="@+id/weekfriday"
            android:layout_width="55dp"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:background="#D4F4FA"
            android:gravity="center"
            android:text="  금  "
            android:textColor="#000000"
            android:textSize="25dp"
            android:textStyle="bold" />

        <ListView
            android:id="@+id/friView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/weekbac" >

        </ListView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.12"
        android:layout_margin="2dp" >

        <TextView
            android:id="@+id/weeksaturday"
            android:layout_width="55dp"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:background="#D4F4FA"
            android:gravity="center"
            android:text="  토  "
            android:textColor="#1266FF"
            android:textSize="25dp"
            android:textStyle="bold" />

        <ListView
            android:id="@+id/satView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/weekbac" >

        </ListView>

    </LinearLayout>

</LinearLayout>